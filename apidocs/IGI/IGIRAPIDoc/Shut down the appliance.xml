<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="RAPI.xsl"?>
<application>
  <doc>Shut down the appliance</doc>
  <resources base="">
    <resource path="https://{appliance_hostname}:9443/diagnostics/restart_shutdown/shutdown">
      <param type="path" name="appliance_hostname">
        <doc>Host name of the appliance.</doc>
      </param>
      <method name="POST" id="ShutdownApp">
        <doc>   To shut down the appliance with the RESTful web service, issue an HTTP POST command on the shut down URI. </doc>
        <request>
          <doc>
 POST https://{appliance_hostname}:9443/diagnostics/restart_shutdown/shutdown
 </doc>
          <param name="Content-Type:application/json" style="header">
            <doc> Required for requests to the service.</doc>
          </param>
          <param name="Authorization" style="header">
            <doc>Basic Authentication header. </doc>
          </param>
          <param name="Accept:application/json" style="header">
            <doc> Required for requests to the service.</doc>
          </param>
        </request>
        <response status="200">
          <doc>OK</doc>
          <doc>
 200 OK
 Content-Type:application/json
 {
     "status":true
 }
 </doc>
          <param name="ContentType:application/json" style="header">
            <doc> Response is in JSON formatting.</doc>
          </param>
          <representation name="RestartShutdownJsonResponse" mediatype="application/json">
            <param style="plain" name="status" type="Boolean" optional="No">
              <doc>Status of the reboot or shutdown command. </doc>
            </param>
          </representation>
        </response>
      </method>
    </resource>
  </resources>
</application>
