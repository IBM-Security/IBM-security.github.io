<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="RAPI.xsl"?>
<application>
  <doc>Create folder</doc>
  <resources base="">
    <resource path="https://{appliance_hostname}:9443/custfile_mgmt/create_folder">
      <param type="path" name="appliance_hostname">
        <doc>Host name of the appliance.</doc>
      </param>
      <method name="POST" id="Create folder">
        <doc>     To create a folder in your appliance with the RESTful web service, issue an HTTP POST request on the custom file resource URI. </doc>
        <request>
          <doc>POST https://{appliance_hostname}:9443/custfile_mgmt/create_folder
 
 POST DATA
 
 {
  folderName: "testfolder", 
  filePath: "properties/testfolder"
 }</doc>
          <param name="Content-Type:application/json" style="header">
            <doc> Required for requests to the service.@rp_end_api/</doc>
          </param>
          <param name="Authorization" style="header">
            <doc>Basic Authentication header. </doc>
          </param>
          <param name="Accept:application/json" style="header">
            <doc> Required for requests to the service.</doc>
          </param>
        </request>
        <response status="201">
          <doc>CREATED</doc>
          <doc>
 201 CREATED
</doc>
        </response>
      </method>
    </resource>
  </resources>
</application>
