          &quot;subnetMask&quot;: &quot;255.255.255.0&quot;,
          &quot;gatewayIpAddr&quot;: &quot;10.251.210.1&quot;
        },
        &quot;dhcp&quot;: null
      },
      &quot;ip6&quot;: {
        &quot;staticAddr&quot;: {
          &quot;ipAddr&quot;: &quot;15a3::10&quot;,
          &quot;prefix&quot;: &quot;64&quot;,
          &quot;gatewayIpAddr&quot;: &quot;15a3::1&quot;
        },
        &quot;auto&quot;: null
      },
      &quot;speedDuplex&quot;: &quot;Auto&quot;,
      &quot;port&quot;: &quot;M.1&quot;,
